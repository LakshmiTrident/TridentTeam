@model BaseApplication.Models.ClientModel

@{
    ViewData["Title"] = "ClientRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ClientRegistration</h1>

<h4>ClientModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ClientRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointOfContacts" class="control-label"></label>
                <select asp-for="PointOfContacts" class="form-control">
                    <option value ="Test">Test</option>
                    <option value="Test1">Test1</option>
                    <option value="Test2">Test2</option>
                </select>
                <span asp-validation-for="PointOfContacts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input type="radio" id="Active" name="Clientstatus" value="Active">
                <label for="Active">Active</label><br>
                <input type="radio" id="InActive" name="Clientstatus" value="InActive">
                <label for="InActive">InActive</label><br>
                @* <input asp-for="Status" class="form-control" /> *@
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateClient" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
