@model BaseApplication.Models.TridentClientModel

@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditClient</h1>

<h4>TridentClientModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditClient">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" placeholder="(XXX) XXX-XXXX" pattern="\(\d{3}\) \d{3}-\d{4}" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlternatePhone" class="control-label"></label>
                <input asp-for="AlternatePhone" placeholder="(XXX) XXX-XXXX" pattern="\(\d{3}\) \d{3}-\d{4}" class="form-control" />
                <span asp-validation-for="AlternatePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoordinatorId" class="control-label"></label>
                <select asp-items="@ViewBag.Coordinators" asp-for="CoordinatorId" class="form-select"></select>
                <span asp-validation-for="CoordinatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <label>
                    <input type="radio" asp-for="Status" value="True"> Active
                </label>
                <label>
                    <input type="radio" asp-for="Status" value="False"> InActive
                </label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" id="txtZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" id="txtState" readonly="true" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" id="txtCity" readonly="true" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClientList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#txtZipCode').on('mouseleave', function () {
                debugger
                const zipCode = $('#txtZipCode').val();
                debugger
                const cityStateResponse = $.ajax({
                    url: `https://api.zippopotam.us/us/${zipCode}`,
                    dataType: 'json'
                }).done(function (data) {
                    $('#txtCity').val(data.places[0]['place name'])
                    $('#txtState').val(data.places[0]['state']);
                }).fail(function (xhr, status, error) {
                    $('#txtCity').val("")
                    $('#txtState').val("");
                });
            });
        });
    </script>
}
