@model BaseApplication.Models.TridentClientModel
@{
    ViewData["Title"] = "ClientRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>ClientRegistration</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ClientRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="CoordinatorId" class="control-label"></label>
                <select asp-items="@ViewBag.Coordinators" asp-for="CoordinatorId" class="form-select"></select>
                <span asp-validation-for="CoordinatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <label>
                    <input type="radio" asp-for="Status" value="True"> Active
                </label>
                <label>
                    <input type="radio" asp-for="Status" value="False"> InActive
                </label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateClient" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClientList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}